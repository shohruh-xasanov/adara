<style>
    .button {
    visibility: hidden;
    }
    .buttonHower:hover{
        cursor: pointer;
        background-color: #FF5400;
        background-color: transparent;

    }
</style>
        <!-- main-area -->
        <main>
            <% var result%>
            <!-- breadcrumb-area -->
            <div class="breadcrumb-area breadcrumb-style-two" data-background="img/bg/s_breadcrumb_bg01.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="breadcrumb-content">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                                        <li class="breadcrumb-item"><a href="/product/all/<%= `${result.typeID.name.uz}`%>"><%= result.typeID.name.uz%></a></li>
                                        <li class="breadcrumb-item"><%= result.gender.charAt(0).toUpperCase() + result.gender.slice(1)%></li>
                                        <li class="breadcrumb-item active" aria-current="page"><%= result.categoryID.name.uz%></li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- breadcrumb-area-end -->

            <!-- shop-details-area -->
            <section class="shop-details-area pt-100 pb-95">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7">
                            <div class="shop-details-flex-wrap">
                                <div class="shop-details-nav-wrap">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link active" id="item-one-tab" data-toggle="tab" href="#item-one" role="tab" aria-controls="item-one" aria-selected="true"><img src="<%= result.poster%>" alt=""></a>
                                        </li>
                                        <%if(result.images[0]) {%>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link" id="item-two-tab" data-toggle="tab" href="#item-two" role="tab" aria-controls="item-two" aria-selected="false"><img src="<%= result.images[0].url%>" alt=""></a>
                                        </li>
                                        <% }%>
                                        <%if(result.images[1]) {%>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link" id="item-three-tab" data-toggle="tab" href="#item-three" role="tab" aria-controls="item-three" aria-selected="false"><img src="<%= result.images[1].url%>" alt=""></a>
                                        </li>
                                        <% }%>
                                        <%if(result.images[2]) {%>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link" id="item-four-tab" data-toggle="tab" href="#item-four" role="tab" aria-controls="item-three" aria-selected="false"><img src="<%= result.images[2].url%>" alt=""></a>
                                        </li>
                                        <% }%>
                                        <%if(result.images[3]) {%>
                                        <li class="nav-item" role="presentation">
                                            <a class="nav-link active" id="item-five-tab" data-toggle="tab" href="#item-five" role="tab" aria-controls="item-one" aria-selected="true"><img src="<%= result.images[3].url%>" alt=""></a>
                                        </li>
                                        <% }%>
                                    </ul>
                                </div>
                                <div class="shop-details-img-wrap">
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade show active" id="item-one" role="tabpanel" aria-labelledby="item-one-tab">
                                            <div class="shop-details-img">
                                                <img src="<%= result.poster%>" alt="">
                                            </div>
                                        </div>
                                        <%if(result.images[0]) {%>
                                        <div class="tab-pane fade" id="item-two" role="tabpanel" aria-labelledby="item-two-tab">
                                            <div class="shop-details-img">
                                                <img src="<%= result.images[0].url%>" alt="">
                                            </div>
                                        </div>
                                        <% }%>
                                        <%if(result.images[1]) {%>
                                        <div class="tab-pane fade" id="item-three" role="tabpanel" aria-labelledby="item-three-tab">
                                            <div class="shop-details-img">
                                                <img src="<%= result.images[1].url%>" alt="">
                                            </div>
                                        </div>
                                        <% }%>
                                        <%if(result.images[2]) {%>
                                        <div class="tab-pane fade" id="item-four" role="tabpanel" aria-labelledby="item-four-tab">
                                            <div class="shop-details-img">
                                                <img src="<%= result.images[2].url%>" alt="">
                                            </div>
                                        </div>
                                        <% }%>
                                        <%if(result.images[3]) {%>
                                        <div class="tab-pane fade" id="item-five" role="tabpanel" aria-labelledby="item-five-tab">
                                            <div class="shop-details-img">
                                                <img src="<%= result.images[3].url%>" alt="">
                                            </div>
                                        </div>
                                        <% }%>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div class="shop-details-content">
                                <a href="#" class="product-cat"><%= result.categoryID.name.uz%></a>
                                <h3 class="title"><%= result.gender.charAt(0).toUpperCase() + result.gender.slice(1)%> <%= result.name.uz%></h3>
                                <div class="rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <p class="style-name">Brand Nomi : <%= result.brandID.name.uz%></p>
                                <div class="price"> Narxi : <%= result.price%> So'm</div>
                                <div class="product-details-info">
                                    <div class="sidebar-product-size mb-30">
                                        <h4 class="widget-title">Mahsulot O'lchami</h4>
                                        <div class="shop-size-list">
                                            <ul>
                                                <li><a href="#">S</a></li>
                                                <li><a href="#">M</a></li>
                                                <li><a href="#">L</a></li>
                                                <li><a href="#">XL</a></li>
                                                <li><a href="#">XXL</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="sidebar-product-color">
                                        <h4 class="widget-title">Color</h4>
                                        <div class="shop-color-list">
                                            <ul>
                                                <li></li>
                                                <li></li>
                                                <li></li>
                                                <li></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="perched-info">
                                    <div class="cart-plus-minus">
                                        <form action="#" class="num-block">
                                            <input type="text" class="in-num" value="1" readonly="">
                                            <div class="qtybutton-box">
                                                <span class="plus"><img src="/img/icon/plus.png" alt=""></span>
                                                <span class="minus dis"><img src="/img/icon/minus.png" alt=""></span>
                                            </div>
                                    </div>
                                    <%if(user) {%>
                                    <a href="/api/order/product/<%= result._id%>" class="btn">Order</a>
                                    <% }%>
                                        </form>
                                    <%if(user) {%>
                                        <form action="/api/basket/create" method="POST">
                                            <input type="text" class="button" name="userID" value="<%=user._id%>">
                                            <input type="text" class="button" name="productID" value="<%= result._id%>">
                                            <div><button style="background-color: #36363b;" type="submit"  class="btn buttonHower"><a style="color: #fff;"> Add to Compare List</a></button></div>
                                       </form>
                                    <% }%>
                                    <% if(!user) {%>
                                        <button type="submit" class="btn" data-toggle="modal"
                                          data-target=".bs-example-modal-lg">order product</button>
                                     <% }%>
                                </div>
                                <div class="product-details-share">
                                    <ul>
                                        <li>Share :</li>
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fab fa-pinterest-p"></i></a></li>
                                        <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="product-desc-wrap">
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description"
                                            aria-selected="true">Mahsulot Tafsifi</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews"
                                            aria-selected="false">Fikrlar</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                                        <div class="product-desc-title mb-30">
                                            <h4 class="title">Qo'shimcha Malumotlar:</h4>
                                        </div>
                                        <p><%= result.description.uz%></p>
                                        <div class="color-size-info">
                                            <ul>
                                                <li><span>RANGI :</span><%for(item of result.colorID) {%> 
                                                  <%= item.name%>
                                                <% }%>
                                                </li>
                                                <li><span>O'lchami :</span> <%= result.size%></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                                        <div class="product-desc-title mb-30">
                                            <h4 class="title">Reviews (<%= commit.length%>) :</h4>
                                        </div>
                                        <%if(!commit.message) {%>
                                        <p class="adara-review-title">Be the first to review “Adara”</p>
                                        <% }%>
                                        <%for(item of commit) {%>
                                        <p class="adara-review-title"><%=item.userID.name%> : <%= item.message%></p>
                                        <% }%>
                                        <div class="review-rating">
                                            <span>Your rating *</span>
                                            <div class="rating">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                        </div>
                                        <form action="/api/comment/create" method="POST" class="comment-form review-form">
                                            <span>Your review *</span>
                                            <textarea name="message" id="comment-message" placeholder="Your Comment"></textarea>
                                            <% if(user) {%>
                                            <div class="row">
                                                <div class="button">
                                                    <input type="text"  name="productID" value="<%=result._id%>">
                                                </div>
                                                <div class="button">
                                                    <input type="text"  name="userID" value="<%= user._id%>" >
                                                </div>
                                            </div>
                                            <button class="btn">Submit</button>
                                            <% }%>
                                        </form>
                                        <div class="perched-info">
                                        <% if(!user) {%>
                                            <button type="submit" class="btn" data-toggle="modal"
                                              data-target=".bs-example-modal-lg"> <a>Submit</a></button>
                                              <% }%>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="related-product-wrap">
                        <div class="row">
                            <div class="col-12">
                                <div class="related-product-title">
                                    <h4 class="title">You May Also Like...</h4>
                                </div>
                            </div>
                        </div>
                        <div class="row related-product-active">
                            <%for(item of bestSeller) {%>
                            <div class="col-xl-3"><%console.log(item)%>
                                <div class="new-arrival-item text-center">
                                    <div class="thumb mb-25">
                                        <a href="/product/<%= item._id%>"><img src="<%= item.poster%>" alt=""></a>
                                        <div class="product-overlay-action">
                                            <ul>
                                                <li><a href="/product/<%= item._id%>"><i class="far fa-eye"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="content">
                                        <h5><a href="/product/<%= item._id%>"><%= item.name.uz%></a></h5>
                                        <span class="price"><%= item.price%></span>
                                    </div>
                                </div>
                            </div>
                            <% }%>
                        </div>
                    </div>
                </div>
            </section>
            <!-- shop-details-area-end -->
            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title mt-0" id="myLargeModalLabel">Siz saytda ruyhatdan o'tmagansiz</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <button class="btn"><a href="/api/user/sign"> Saytga kirish</a></button>
                </div>
              </div>
            </div>
          </div>
        </main>
        <!-- main-area-end -->

